<div class="log-form overflow col-xs-12 col-md-4">
  <% if current_page?(controller: 'users', action: 'new')  %>
      <h2>Ton profil:</h2>
  <% else %>
      <h2>Modifier profil:</h2>
  <% end %>


    <%= simple_form_for [@user]  do |f| %>
      <h5><u>Diplômes:</u></h5>
      <%= f.input :name, label: "Quel est ton prénom?" %>
      <%= f.input :start_year_prepa, label: "En quelle année es tu rentré en prépa?", collection: 1990..2021 %>
      <%= f.input :contact_details, label: "Comment te contacter?" %>
      <%= f.input :sector, label: "Quel est ton secteur d'activité?", collection: ["Administration, fonction publique", "Agroalimentaire", "Associations", "Banques, assurances, services financiers", "Commerce de détail, grande distribution", "Communication, marketing, information","Culture, sports, loisirs", "Energie", "Enseignement, formation", "Gestion, administration des entreprises", "Hôtellerie, restauration, tourisme", "Immobilier", "Industrie textile", "Informatique", "Ingénieurs d'études et de recherche, chercheurs", "Logistique, transports", "Matériel électrique, électronique, optique", "Mécanique, métallurgie", "Professions juridiques",  "Santé, action sociale", "Services aux particuliers, collectivités, entreprise"] %>

      <%= f.input :occupation, label: "Qu'est ce que tu fais dans ta vie?" %>
      <%= f.input :hobbies, label: "Qu'est ce que t'animes?" %>
      <%= f.input :school_description, label: "Dis nous en plus sur l'école que tu as intégrée" %>
      <%= f.input :personal_path, label: "Quel est ton parcours?" %>
      <%= f.input :memories, label: "Un souvenir sur la prépa?" %>
      <%= f.input :availability_to_help, label: "Les préparationnaires peuvent te contacter pour?" %>
      <%= f.input :link_network, label: "Un lien vers linked in?" %>
      <%= f.input :photo, as: :file, label: "Photo de profil:" %>

      <%= f.submit "Valider les informations", class: "btn btn-lg blue-civ col-xs-9 col-md-12" %>
    <% end %>

</div>
